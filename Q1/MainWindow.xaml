        <Label Content="Total Expenses" HorizontalAlignment="Left" Margin="505,339,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="tblkTotal" HorizontalAlignment="Left" Margin="613,344,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>

    </Grid>
</Window>
